<h2>Create a New Topic</h2>

<div class="row">
    <div class="col-md-10">
        <%= simple_form_for @topic, :html => {:multipart =>true} do |f| %>

        <%= f.input :title, label: "Title:" %>
        <br>

        <%= f.input :body, input_html: { :cols => 100, :rows => 15 }, label: "Body:" %><br>

        <%= f.button :submit, "Update Topic" %>
        <br><br>
        <% end %>
    </div>
</div>
