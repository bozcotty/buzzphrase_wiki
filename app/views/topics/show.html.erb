<h2>Topic: <%= @topic.title %></h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <p><%= @topic.body %></p>
    </div>
    <div class="col-md-4">

        <button type="button" class="btn btn-default"><%= link_to "Back to Index", topics_path %></button>
        <% if current_user %>
        <button type="button" class="btn btn-default"><%= link_to "Edit Topic", edit_topic_path %></button>
        <% end %>


      <br><br>
      <h4>List of Contributors:</h4>
        <ul>
          <% @topic.users.each do |user| %>
          <li>
            <%= link_to user.name, user_path %>
          </li>
          <% end %>
        </ul>

    </div>
  </div>
</div>
